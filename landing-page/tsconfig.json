{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$components/*": ["./src/components/*"],
			"$utils/*": ["./src/utils/*"],
			"$utils": ["./src/utils"],
			"$assets/*": ["./src/assets/*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	}
	// "include": ["src/**/*.astro", "src/**/*.ts"]
}
