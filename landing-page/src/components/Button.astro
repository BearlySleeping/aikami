---
import { Icon } from 'astro-icon/components';

interface Props {
	href: string;
	icon: string;
	label: string;
}

const { href, icon, label } = Astro.props;
---

<a
	href={href}
	class="flex appearance-none items-center space-x-2 rounded-lg bg-secondary px-4 py-2 font-semibold text-white shadow-md hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-secondary dark:bg-secondary-dark dark:focus:ring-secondary-dark">
	<Icon name={icon} class="inline-block size-6" />
	<span class="ml-2">{label}</span>
</a>
